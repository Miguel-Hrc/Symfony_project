{# templates/product/_product_table.html.twig #}
{% if app.user %}
    <div class="card h-100 p-3 border border-1 border-black" style="width:15vw">
        {% if sweatshirt.imageName %}
            <img src="{{ asset('images/sweatshirt/' ~ sweatshirt.imageName) }}" style="width:12vw" class="card-img-top mb-3" alt="{{ sweatshirt.name }} ">
        {% endif %}

        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h5 class="card-title mb-1 fw-light">{{ sweatshirt.name }}</h5>
                <p class="card-text mb-0 fw-light">{{ (sweatshirt.price / 100)|number_format(2, ',', ' ') }} €</p>
            </div>
            <a href="{{ path('app_detail_product', { id: sweatshirt.id }) }}" class="btn btn-outline-dark">Voir</a>
        </div>
    </div>
{% endif %}
{% if not app.user %}
    <div class="card h-100 p-3" style="width:20vw">
        {% if sweatshirt.imageName %}
            <img src="{{ asset('images/sweatshirt/' ~ sweatshirt.imageName) }}" style="width:15vw" class="card-img-top mb-3" alt="{{ sweatshirt.name }} ">
        {% endif %}

        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h5 class="card-title mb-1 fw-light">{{ sweatshirt.name }}</h5>
                <p class="card-text mb-0 fw-light">{{ (sweatshirt.price / 100)|number_format(2, ',', ' ') }} €</p>
            </div>
        </div>
    </div>
{% endif %}